/* ========== Left Navigation ========== */

nav {
    width: 212px;
    margin-top: -1px;
    float: left;
    margin-right: 41px;
    margin-bottom: 10px;
}
nav .last { border-bottom: none }
nav ul li { position: relative }
nav ul li a {
    color: #fafafa;
    font-size: 15px;
    display: block;
    border: 1px solid #2e3234;
    margin-top: 1px;
    background: url('../../resources/images/navbutton_bg.png') repeat-x;
    font-family: 'Cuprum', sans-serif;
    font-weight: normal;
}
nav ul li a:hover {
    background-position: 0 -39px;
    color: #fafafa;
    border: 1px solid #252a31;
}
nav ul li a.active { background-position: 0 -78px }
nav ul li a span {
    padding: 9px 0 9px 35px;
    display: block;
}


/* ========== Left Navigation Icons ========== */

nav ul li.dash a span { background-image: url('../../resources/images/icons/download.png') }
nav ul li.graphs span { background-image: url('../../resources/images/icons/graph.png') }
nav ul li.forms a span { background-image: url('../../resources/images/icons/pencil.png') }
nav ul li.gallery a span { background-image: url('../../resources/images/icons/preview.png') }
nav ul li.typo span { background-image: url('../../resources/images/icons/create.png') }
nav ul li.computer a span { background-image: url('../../resources/images/icons/computer.png') }
nav ul li.cal a span { background-image: url('../../resources/images/icons/day-calendar.png') }
nav ul li.errors a span { background-image: url('../../resources/images/icons/alert.png') }
nav ul li.files a span { background-image: url('../../resources/images/icons/files.png') }
nav ul li.cloud a span { background-image: url('../../resources/images/icons/cloud.png') }
nav ul li.pic a span { background-image: url('../../resources/images/icons/blocks.png') }
nav ul li.widgets a span { background-image: url('../../resources/images/icons/full.png') }
nav ul li.contacts a span { background-image: url('../../resources/images/icons/users.png') }
nav ul li.volume a span { background-image: url('../../resources/images/icons/volume.png') }
nav ul li.settings a span { background-image: url('../../resources/images/icons/settings.png') }
nav ul li.help a span { background-image: url('../../resources/images/icons/help.png') }
nav ul li a span {
    background-position: 10px;
    background-repeat: no-repeat;
}


/* ========== Left Navigation Subnav ========== */

ul.sub {
    border: 1px solid #272c30;
    border-top: none;
}
ul.sub li {
    border-bottom: 1px dotted #24272B;
    padding: 1px;
}
ul.sub li a,
ul.sub li a:hover,
.sub li a:active { background: url('../../resources/images/arrow.gif') no-repeat 8px 16px }
ul.sub li a {
    border: none;
    font-family: 'Cuprum', sans-serif;
    font-size: 12px;
    padding: 8px 10px 8px 18px;
    color: #d5d5d5;
}
ul.sub li a:hover,
.sub li a:active {
    font-style: normal;
    border: none;
    color: #676767;
}
ul.sub li ul {
    border: none;
    border-top: 1px solid #c9c9c9;
}
ul.sub li ul li { padding-left: 10px }


/* ========== Media queries ========== */

/* ========== Devices and browsers with max of 799px ========== */

@media only screen and (max-width: 799px) { 
    nav {
        float: none;
       /* background: url(../images/horSep.png) repeat-x;*/
        padding-top: 24px;
        text-align: center;
        padding-bottom: 20px;
        margin: 0;
        width: 100%;
        max-width: none;
    }
    nav ul li {
        width: 49px;
        display: inline-block;
        margin: 0 0 4px 0;
        position: static;
    }
    nav ul li a span {
        text-indent: -9999px;
        background-position: 16px;
    }
    nav ul li a { margin-bottom: 2px }
    .numberLeft { display: none!important }
    ul.sub {
        position: absolute;
        width: 100%;
        left: 0;
        z-index: 999;
        border: 1px solid #232628;
    }
    ul.sub li {
        display: block;
        width: 50%;
        float: left;
        margin-bottom: 0;
        text-align: left;
        border-bottom: 1px solid #3a3f42;
        padding: 0;
    }
    ul.sub li a {
        padding: 8px 10px 8px 24px;
        background: url(../images/arrow.gif) no-repeat 12px 16px;
    }
    ul.sub li a:hover,
    .sub li a:active { background-position: 12px 16px }
    ul.sub li:nth-child(even) { }
    /*ul.sub li:nth-child(odd) { background: url(../images/tabsSepR.png) repeat-y 100% 0 }*/
    ul#menu { position: relative }
    nav .last { border-bottom: 1px solid #3a3f42 }
}

